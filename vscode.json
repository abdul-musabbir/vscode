{
  // editor
  "editor.fontSize": 20,
  "editor.fontFamily": "Cascadia Code",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "window.zoomLevel": 1,
  // cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  // config related to code formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },
  "eslint.alwaysShowStatus": true,
  // Live SASS Compiler
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      "extensionName": ".min.css",
      "savePath": "/css"
    }
  ],
  "liveSassCompile.settings.generateMap": false,
  //terminal
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Fira Code, Operator Mono",
  "workbench.colorTheme": "Learn with Sumit - Shades of Grey",
  "workbench.iconTheme": "helium-icon-theme",
  // terminal customization
  "workbench.colorCustomizations": {
    "terminal.background": "#1D2021",
    "terminal.foreground": "#A89984",
    "terminalCursor.background": "#A89984",
    "terminalCursor.foreground": "#A89984",
    "terminal.ansiBlack": "#1D2021",
    "terminal.ansiBlue": "#0D6678",
    "terminal.ansiBrightBlack": "#665C54",
    "terminal.ansiBrightBlue": "#0D6678",
    "terminal.ansiBrightCyan": "#8BA59B",
    "terminal.ansiBrightGreen": "#95C085",
    "terminal.ansiBrightMagenta": "#8F4673",
    "terminal.ansiBrightRed": "#FB543F",
    "terminal.ansiBrightWhite": "#FDF4C1",
    "terminal.ansiBrightYellow": "#FAC03B",
    "terminal.ansiCyan": "#8BA59B",
    "terminal.ansiGreen": "#95C085",
    "terminal.ansiMagenta": "#8F4673",
    "terminal.ansiRed": "#FB543F",
    "terminal.ansiWhite": "#A89984",
    "terminal.ansiYellow": "#FAC03B"
  },
  "json.schemas": [],
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "glassit.alpha": 220,
  "explorer.confirmDelete": false,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "explorer.confirmDragAndDrop": false,
  "tabnine.experimentalAutoImports": true,
  "liveServer.settings.donotVerifyTags": true,
  "background.editorBackgrounds": [
    "c:/Users/Md Abdul Mottalib/OneDrive/Pictures/background image.svg"
  ],
  "background.backgroundSize": ["Cover", "Manual", "Cover", "Cover"],
  "background.backgroundSizeValue": ["100%", "30%", "100%", "100%"],
  "security.workspace.trust.untrustedFiles": "open",
  "background.backgroundOpacity": [0.9, 0.9, 0.9, 0.9],
  "html.format.contentUnformatted": "",
  "codesnap.backgroundColor": "#a8e063",
  "workbench.statusBar.visible": false,
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "launch": {
    "configurations": [],
    "compounds": []
  }
}
